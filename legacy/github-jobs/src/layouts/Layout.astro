---
import Header from "@/components/Header.astro";
import { Footer } from "@internal/components/src/Footer";
import "@material-design-icons/font/filled.css";
import "@fontsource/roboto/latin-400.css";
import "@fontsource/roboto/latin-500.css";
import "@fontsource/roboto/latin-700.css";
import "@fontsource-variable/montserrat";
import "@fontsource/montserrat";
import "@fontsource/montserrat/500.css";
import "@fontsource/montserrat/700.css";
import "@fontsource/poppins/latin-300.css";
import "@fontsource/poppins/latin-400.css";
import "@fontsource/poppins/latin-500.css";
import "@fontsource/poppins/latin-700.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      type="module"
      src="node_modules/@hrc/toggle-theme/dist/load-theme.js"
      is:inline></script>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  @use "@lib/sass-utils/font/sizes/static";

  :root {
    font-family: "Roboto", sans-serif;

    font-synthesis: none;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-text-size-adjust: 100%;

    --primary: #1e86ff;
    --primary-hover: #0a67eb;

    --text: #334680;
    --text-secondary: #b9bdcf;

    --box-shadow: 0px 2px 4px 0px rgb(0 0 0 / 15%);
    --placeholder-color: var(--text-secondary);
  }

  * {
    box-sizing: border-box;
  }

  [data-theme="dark"] {
    --bg-color: #161616;
    --text-color: #fff;
    --text: #b0c8ff;

    --checkbox-bg-hover: rgb(255 255 255 / 8%);
    --radio-bg-hover: rgb(255 255 255 / 8%);
  }

  body {
    min-width: 320px;
    background-color: var(--bg-color, #fff);

    color: var(--text-color, #000);
  }
</style>
