---
import { Header } from "./components/Header";
import { Footer } from "@lib/components/Footer";
import { Maintenance as LibMaintenance } from "@lib/components/Maintenance";

type Props = {
  issue: number;
};

const { issue } = Astro.props;
---

<Header client:only="react" />
<LibMaintenance issue={issue} repairImageSrc="/repair.png" />
<Footer />

<style lang="css">
  :root {
    --issue-link-text: var(--primary);
  }
</style>
