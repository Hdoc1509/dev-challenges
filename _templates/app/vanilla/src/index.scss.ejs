to: vanilla/<%= name %>/src/index.scss
---

@use "@lib/sass-utils";

:root {
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;

  --bg: #fff;
  --text: #000;
}

[data-theme="dark"] {
  --bg: #222;
  --text: #fff;
}

body {
  background-color: var(--bg);
  color: var(--text);
}
