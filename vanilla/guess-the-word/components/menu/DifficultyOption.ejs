<label class="label" data-type="radio" data-difficulty="<%= difficulty %>">
  <span class="radio">
    <input
      class="radio__inner"
      type="radio"
      name="difficulty"
      value="<%= difficulty %>"
    />
    <span class="radio__icon" aria-hidden="true">
      <!-- prettier-ignore -->
      <%- include("icon/RadioUnchecked") %>
      <%- include("icon/RadioChecked") %>
    </span>
  </span>
  <span class="label__text">
    <span class="difficulty-name">
      <!-- prettier-ignore -->
      <% const label = capitalize(difficulty) %>
      <%= locals.onLabel?.(label) ?? label %>:
    </span>
    <%= description %>
    <% if (locals.extraDifficulty != null) { %>
    <span class="plus-sign">+</span>
    <!-- TODO: use `.text-<difficulty>` utility class -->
    <span
      class="difficulty-name"
      style="--difficulty-text: var(--difficulty-<%= extraDifficulty %>)"
    >
      <!-- prettier-ignore -->
      <% const extraLabel = capitalize(extraDifficulty) %>
      <%= locals.onExtraLabel?.(extraLabel) ?? extraLabel %>
    </span>
    <% } %>
  </span>
</label>
